@model IEnumerable<WebBanHangOnline.Models.EF.Product>
@using WebBanHangOnline.Common
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <!-- Product 1 -->
        var strImg = "";
        var img = item.ProductImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImg = img.Image;
        }
        var wishlist = item.Wishlists.FirstOrDefault(x => x.UserName == User.Identity.Name);
        var isWishlist = false;
        if (wishlist != null)
        {
            isWishlist = true;
        }
        <div class="product-item @item.ProductCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <a href="/chi-tiet/@item.Alias-@item.Id"><img src="@strImg" alt="@item.Title"></a>
                </div>
                @if (isWishlist == true)
                {
                    if (item.PriceSale != 0)
                    {
                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                        <div data-id="@item.Id" class="favorite favorite_left active"></div>
                    }


                    if (item.IsFeature)
                    {
                        <div class="product_bubble product_bubble_left product_bubble_green d-flex flex-column align-items-center"><span>new</span></div>
                        <div data-id="@item.Id" class=" favorite favorite_right active"></div>
                    }

                    if (!item.IsFeature && item.PriceSale == 0)
                    {
                        <div data-id="@item.Id" class="favorite favorite_right active"></div>
                    }
                }
                else
                {
                    if (item.PriceSale != 0)
                    {
                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                        <div data-id="@item.Id" class="favorite favorite_left"></div>
                    }


                    if (item.IsFeature)
                    {
                        <div class="product_bubble product_bubble_left product_bubble_green d-flex flex-column align-items-center"><span>new</span></div>
                        <div data-id="@item.Id" class="favorite favorite_right"></div>
                    }

                    if (!item.IsFeature && item.PriceSale == 0)
                    {
                        <div data-id="@item.Id" class="favorite favorite_right"></div>
                    }
                }

                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-@item.Id">@item.Title</a></h6>
                    @if (item.PriceSale != 0)
                    {
                        <div class="product_price">@Common.FormatNumber(item.PriceSale, 0)<span>@Common.FormatNumber(item.Price, 0)</span></div>
                    }
                    else
                    {
                        <div class="product_price">@Common.FormatNumber(item.Price, 0)</div>
                    }

                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">Thêm vào giỏ hàng</a></div>
        </div>
    }
}